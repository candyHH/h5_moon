  <script>
    // 点击参与抽奖，
    $('.pass-btn').click(function(){
      var pageNum= 7;
      $.ajax({
        type:'post',
        url:'pass',
        data:{
          pageNum : pageNum
        }
      })
    })
  </script>
  <script>
    // 保存当前页码到sessionStorage
    var pageNum = sessionStorage.getItem('page');
    console.log(pageNum);
    if (pageNum == null || pageNum == 0) {
    	window.location.href="/";
    } else if (pageNum ==6 || pageNum > 6) {
    	pageNum = 7;
    	sessionStorage.setItem('page',pageNum);
        console.log(sessionStorage.getItem('page'));
    };
